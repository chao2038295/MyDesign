/* pages/schedule/schedule.wxss */

page{
  background-color: rgba(199, 196, 187,0.7);
}


.req-box{
  position: fixed;
  bottom: 0;
  background-color: #F5F5DC;
  z-index: 99;
  width: 700rpx ;
  margin-left: 25rpx;
  border: 1rpx solid black;
  border-bottom: none;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  box-shadow: 0 0 10rpx black; 
}
.input-style{
  border: 1px solid black;
  width: 580rpx;
  margin: 20rpx 35rpx;
  padding: 15rpx 25rpx;
  background-color: white;
  border-radius: 10rpx;
}

.btn{
  margin-bottom: 25rpx;
  border: 1px solid black;
}

.content-box{
  border: 2px solid gray;
  margin: 5px 5px;
  width: 720rpx;
  margin-bottom: 220rpx;
  background-color: white;
}

.content-item{
  flex: 1;
}

.time-item{
  width: 90rpx;
  height: 200rpx;
  line-height: 200rpx;
  margin: 5rpx 5rpx;
  border: 2px solid rgb(163, 165, 174);
  border-radius: 5px;
  font-size: 25rpx;
  box-shadow: 2rpx 2rpx 5rpx rgb(163, 165, 174);
}

.time-item-text{
  font-size: 24rpx;
  text-align: center;
  font-weight: 700;
}

.week{
  width: 100%;
  white-space: nowrap;
  
}

.week-item{
  display: inline-block;
  width: 150rpx;
  height: 104rpx;
  margin: 5rpx 5rpx;
  border: 2px solid rgb(163, 165, 174);
  border-radius: 5px;
  font-size: 25rpx;
  line-height: 104rpx;
  font-weight: 700;
  text-align: center;
  box-shadow: 2rpx 2rpx 5rpx rgb(163, 165, 174);
}

.goust{
  vertical-align: middle;
  width: 90rpx;
}

.content-text{
  display: flex;
  width: 100%;
}