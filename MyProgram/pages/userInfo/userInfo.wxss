page{
  background-color: rgba(199, 196, 187,0.7);
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
}

.content{
  font-size: 40rpx;
  padding: 50rpx 30rpx;
  width: 100%;
  margin: 0 20rpx;
}
.title{
  position: relative;
  font-size: 64rpx;
  font-weight: 900;
  /* text-align: center; */
  top: -60rpx;
  left: -20rpx;
}

.content view{
  font-size:32rpx;
  font-weight: 600;
  border: 1px solid rgba(80, 80, 80, 0.3);
  height: 70rpx;
  margin-top: 20rpx;
  padding: 8rpx 20rpx;
  line-height: 70rpx;
  background-color: white;
  border-radius: 6rpx;
  box-shadow: 20rpx 10rpx 12rpx rgba(80, 80, 80,0.3);
  color: rgb(24, 24, 23);
}
