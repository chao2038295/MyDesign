/* pages/exam/exam.wxss */
page{
  background-color: rgba(199, 196, 187,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  flex-direction: column;
}
.content-box{
  padding: 0 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  height: 100%;
  z-index: 99;

  
}

.content{
  
  background-color: rgb(242, 240, 240);
  border: 1px solid gray;
  border-radius: 10rpx;
  margin: 25rpx 100rpx;
  padding: 30rpx 20rpx;
  box-shadow: 20rpx 10rpx 12rpx rgba(80, 80, 80,0.3);
}

.title{
  font-size: 52rpx;
  font: 900;
  margin-top: 100rpx;
}

.content view{
  margin-top: 10rpx;
  
}


.cav-box{
  position: absolute;
  width: 100%;  
  height: 100%;
  z-index: -1;
}

.canvas-style{
  width: 100%;
  height: 100%;
}

.item-page-box{
  position: fixed;
  text-align: center;
  bottom: 10rpx;
  width: 100%;
  height: 50rpx;
  z-index: 99;
}
.item-page{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100% - 100rpx;
  height: 100%;
  background-color: white;
  border: 1px solid black;
  border-radius: 10rpx;
  margin: 0 50rpx;
}
.page-text{
  display: inline-block;
  margin: 0 4rpx;
  height: 100%;
  width: 30rpx;
  padding: 0 5rpx;
  font-size: 24rpx;
  line-height: 50rpx;
}
.page-temp{
  color: skyblue;
  font-size: 34rpx;
}