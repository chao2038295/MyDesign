/* pages/findClass/findClass.wxss */
page{
  background-color: rgba(199, 196, 187,0.7);
  width: 100%;
  height: 100%;
}
.useInput-box{
  position: absolute;
  bottom: 0;
  width: 680rpx;
  background-color: white;
  border: 1px solid black;
  padding: 30rpx 10rpx;
  margin-left: 25rpx;
  border-radius: 20rpx;
}
.input-style{
  border: 1px solid black;
  margin: 15rpx 20rpx;
  padding: 12rpx 20rpx;
  box-shadow: 0 0 4rpx rgb(41, 38, 38);
  background-color: white;

}
.input-text{
  height: 18rpx;
  font-size:26rpx;
  font-weight: 600;
  line-height: 18rpx;
  padding-left: 30rpx;
  color: rgb(42,35,35) ;
  
}
.show-info{
  text-align: center;
  color: rgb(108,108,121);
  font-size: 26rpx;
  font-weight: 600;
}

.warn{
  color: red;
}

.btn{
  margin-top: 20rpx;
  border: 1px solid black ;
  background-color: rgba(119,136,153,0.3);
  
}

.show-box {
  position: absolute;
  top: 50rpx;
  width: 680rpx;
  height: 400rpx;
  border: 1px solid black;
  margin-left: 25rpx ;
  padding: 20rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  box-shadow: 0 0 5rpx black;
  background-color: white;
}

.show-text{
  font-weight: 700;
  padding: 20rpx 30rpx;
  font-size: 48rpx;
  line-height: 48rpx;
  margin: 50rpx 0;
}
.scl-style{
  border: 1px solid black;
  border-radius: 10rpx;
  box-shadow: 0 0 8rpx black inset;
  height: 100rpx;
  line-height: 100rpx;
  width: 500rpx;
  text-align: center;
}