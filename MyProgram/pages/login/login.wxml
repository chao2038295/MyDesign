<!--pages/login/login.wxml-->



<view class="login-content">
<input placeholder="学号" bindblur="addId" bindfocus="chooseId" class="{{ selectId ? 'select-item':'show-item'}} login-text" ></input>
<input placeholder="密码" bindblur="addPwd"  password="true" bindfocus="choosePwd" class="{{ selectPwd ? 'select-item':'show-item' }} login-text"></input>
<button class="login-btn" bind:tap="login">登录</button>
</view>  

<view class="title">大学生信息服务平台</view>
